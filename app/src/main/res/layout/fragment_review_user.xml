<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.reviewuser.ReviewUserFragment"
    android:id="@+id/content_list_review"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flSendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryLightColor"
        android:padding="@dimen/default_dimen_small">

        <TextView
            android:id="@+id/tvRating"
            style="@style/TextOnPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_dimen_medium"
            android:text="@string/tvRating"
            android:textSize="@dimen/default_text_size_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rbStars"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintVertical_chainStyle="packed" />

        <RatingBar
            android:id="@+id/rbStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@color/yellow"
            android:stepSize="1"
            app:layout_constraintBottom_toBottomOf="@+id/tvRating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvRating"
            app:layout_constraintTop_toTopOf="@+id/tvRating" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSendMessage"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_etSendMessage"
            android:textAlignment="viewStart"
            app:endIconDrawable="@drawable/ic_send"
            app:endIconMode="custom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnSendReview"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRating"
            app:layout_constraintVertical_chainStyle="spread">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieSendMessage"
                style="@style/TextOnPrimary.TextInputLayout"
                android:layout_width="match_parent"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/imgBtnSendReview"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="@dimen/default_height_extra_small"
            android:layout_height="@dimen/default_height_extra_small"
            android:background="@color/secondaryColor"
            android:foregroundGravity="center"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="@+id/tilSendMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tilSendMessage"
            app:layout_constraintTop_toTopOf="@+id/tilSendMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvNoReviewData"
        style="@style/TextOnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvNoReviewData"
        android:visibility="gone"
        android:layout_below="@id/flSendMessage"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_dimen_large"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/flSendMessage"/>

</RelativeLayout>