<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutDescripcion"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_medium"
    android:orientation="vertical"
    app:layout_constraintEnd_toStartOf="@+id/guideline31"
    app:layout_constraintStart_toStartOf="@+id/guideline30"
    app:layout_constraintTop_toBottomOf="@+id/divider2"
    app:layout_constraintBottom_toTopOf="@+id/divider3"
    tools:showIn="@layout/fragment_info">

    <TextView
        style="@style/TextOnPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_medium"
        android:text="@string/tvUserDescription"
        android:textSize="@dimen/default_text_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserDescription"
        style="@style/TextOnPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_medium"
        android:text="@string/tvUserDescription"
        android:textSize="@dimen/default_text_size_medium" />

</LinearLayout>