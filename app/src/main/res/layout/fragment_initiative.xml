<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.initiative.InitiativeFragment"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvCreated"
            style="@style/TextOnPrimary"
            android:textSize="@dimen/default_text_size_extra_large"
            android:layout_margin="@dimen/default_margin_medium"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow_up" />

        <!-- Lista de inicitativa creadas -->
        <LinearLayout
            android:id="@+id/llInitiativeCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llCreatedInProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SubTextOnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_extra_large"
                    android:layout_marginTop="@dimen/default_margin_medium"
                    android:text="@string/tvCreatedInProgress"
                    android:textSize="@dimen/default_text_size_large" />

                <LinearLayout
                    android:id="@+id/llNoDataCreatedInProgress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvNoDataCreatedInProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_margin_extra_large"
                        android:gravity="center"
                        android:text="@string/tvNoDataCreatedInProgress"
                        android:textSize="@dimen/default_text_size_medium" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInitiativeCreatedInProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCreatedHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SubTextOnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_extra_large"
                    android:layout_marginTop="@dimen/default_margin_medium"
                    android:text="@string/tvCreatedHistory"
                    android:textSize="@dimen/default_text_size_large" />

                <LinearLayout
                    android:id="@+id/llNoDataCreatedHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvNoDataCreatedHistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_margin_extra_large"
                        android:gravity="center"
                        android:text="@string/tvNoDataCreatedHistory"
                        android:textSize="@dimen/default_text_size_medium" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInitiativeCreatedHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvJoined"
            style="@style/TextOnPrimary"
            android:textSize="@dimen/default_text_size_extra_large"
            android:layout_margin="@dimen/default_margin_medium"
            android:drawableEnd="@drawable/ic_arrow_up"
            android:clickable="true"/>

        <!-- Lista de iniciativas unidas -->
        <LinearLayout
            android:id="@+id/llInitiativeJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llJoinedInProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SubTextOnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_extra_large"
                    android:layout_marginTop="@dimen/default_margin_medium"
                    android:text="@string/tvJoinedInProgress"
                    android:textSize="@dimen/default_text_size_large" />

                <LinearLayout
                    android:id="@+id/llNoDataJoinedInProgress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvNoDataJoinedInProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_margin_extra_large"
                        android:gravity="center"
                        android:text="@string/tvNoDataJoinedInProgress"
                        android:textSize="@dimen/default_text_size_medium" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInitiativeJoinedInProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llJoinedHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SubTextOnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_extra_large"
                    android:layout_marginTop="@dimen/default_margin_medium"
                    android:text="@string/tvJoinedHistory"
                    android:textSize="@dimen/default_text_size_large" />

                <LinearLayout
                    android:id="@+id/llNoDataJoinedHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvNoDataJoinedHistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_margin_extra_large"
                        android:gravity="center"
                        android:text="@string/tvNoDataJoinedHistory"
                        android:textSize="@dimen/default_text_size_medium" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInitiativeJoinedHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_loading_data"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</FrameLayout>