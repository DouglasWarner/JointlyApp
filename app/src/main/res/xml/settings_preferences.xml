<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:key="@string/key_account"
        android:fragment="com.douglas.jointlyapp.ui.preferences.AccountFragment"
        android:title="@string/title_account"
        android:summary="@string/summary_account"
        app:icon="@drawable/ic_manage_accounts"/>

    <SwitchPreference android:title="@string/title_remember"
        android:summary="@string/summary_remember"
        android:key="@string/key_remember"
        app:icon="@drawable/ic_profile"/>

    <PreferenceCategory android:title="@string/title_category_notification">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_notification"
            android:summary="@string/summary_notification"
            android:title="@string/title_notification"
            app:icon="@drawable/ic_notifications"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_category_orderlist">
        <ListPreference
            android:title="@string/title_orderby_initiative"
            android:key="@string/key_orderby_initiative"
            android:summary="@string/summary_orderby_initiative"
            android:entries="@array/orderby_initiative"
            android:entryValues="@array/orderby_initiative_values"
            app:icon="@drawable/ic_filter_list"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_category_help">
        <Preference
            android:title="@string/title_libraries"
            android:key="@string/key_libraries"
            android:fragment="com.douglas.jointlyapp.ui.preferences.AboutLibrariesFragment"/>
        <Preference
            android:title="@string/title_about"
            android:key="@string/key_aboutus"
            android:fragment="com.douglas.jointlyapp.ui.preferences.AboutUsFragment">
        </Preference>

    </PreferenceCategory>
</PreferenceScreen>