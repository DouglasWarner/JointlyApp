<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.douglas.jointlyapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ui.JointlyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/JointlyApp">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.signup.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.JointlyActivity"
            android:screenOrientation="portrait">

        </activity>

        <receiver android:name=".ui.broadcast.NotificationNewMessageChatBroadCast">
            <intent-filter>
                <action android:name="com.douglas.notification_new_message_chat"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name=".ui.service.BackgroundJobService"
            android:permission="android.permission.BIND_JOB_SERVICE">
        </service>
    </application>

</manifest>